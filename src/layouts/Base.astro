---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Gayuru G' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Gayuru G - Product, Design, Engineering" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="px-6 py-16 md:py-24">
    <main class="mx-auto max-w-[640px]">
      <slot />
    </main>
  </body>
</html>
