---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Gayuru G' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Gayuru G - Product, Design, Engineering"
    />
    <title>{title}</title>
  </head>
  <body class="px-6 py-24 md:py-50">
    <main class="mx-auto max-w-[640px]">
      <slot />
    </main>
  </body>
</html>
