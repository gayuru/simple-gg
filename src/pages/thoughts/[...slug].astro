---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('thoughts');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Base title={`${post.data.number}. ${post.data.title} - Gayuru G`}>
  <div class="text-sm">
    <h1 class="mb-6 font-heading"><span class="text-xs text-muted">{post.data.number}.</span> <span class="text-base">{post.data.title}</span></h1>

    <p class="text-muted mb-8">{post.data.date}</p>

    <div class="space-y-4 mb-8 prose prose-invert prose-sm">
      <Content />
    </div>

    <nav class="mt-12">
      <a href="/thoughts">../</a>
    </nav>
  </div>
</Base>
