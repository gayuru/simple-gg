---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const posts = await getCollection('thoughts');
const sortedPosts = posts.sort((a, b) =>
  b.data.number.localeCompare(a.data.number),
);
---

<Base title="Thoughts - Gayuru G">
  <div class="text-sm">
    <h1 class="text-base mb-6 font-heading">thoughts</h1>

    <p class="text-muted mb-8">stuff i think about. sometimes useful.</p>

    <div class="space-y-2 mb-8">
      {
        sortedPosts.map((post) => (
          <p>
            <span class="text-xs text-muted">{post.data.number}.</span>{' '}
            <a href={`/thoughts/${post.id}`}>{post.data.title}</a>
          </p>
        ))
      }
    </div>

    <nav class="mt-12">
      <a href="/">../</a>
    </nav>
  </div>
</Base>
