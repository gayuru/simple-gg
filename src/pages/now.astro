---
import Base from '../layouts/Base.astro';

// Import the markdown file directly
const now = await import('../content/now/index.md');
const { Content, frontmatter } = now;
---

<Base title="Now - Gayuru G">
  <div class="text-sm">
    <h1 class="text-base mb-6 font-heading">{frontmatter.title}</h1>

    <p class="text-muted mb-8">
      {frontmatter.tagline}
    </p>

    <div class="prose-now">
      <Content />
    </div>

    <p class="text-muted text-xs mt-8">last updated: {frontmatter.updated}</p>

    <nav class="mt-12">
      <a href="/">../</a>
    </nav>
  </div>
</Base>

<style>
  .prose-now :global(h2) {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    margin-bottom: 0.75rem;
    margin-top: 2rem;
    font-family: var(--font-heading);
  }

  .prose-now :global(h2:first-child) {
    margin-top: 0;
  }

  .prose-now :global(ul) {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }

  .prose-now :global(li) {
    margin-bottom: 0.25rem;
  }
</style>
